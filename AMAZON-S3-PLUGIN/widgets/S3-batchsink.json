{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Amazon S3",
  "configuration-groups": [
    {
      "label": "Connection",
      "properties": [
        {
          "widget-type": "toggle",
          "label": "Use Connection",
          "name": "useConnection",
          "widget-attributes" : {
            "on": {
              "value": "true",
              "label": "YES"
            },
            "off": {
              "value": "false",
              "label": "NO"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "connection-select",
          "label": "Connection",
          "name": "connection",
          "widget-attributes": {
            "connectionType": "S3"
          }
        },
        {
          "widget-type": "radio-group",
          "label": "Authentication Method",
          "name": "authenticationMethod",
          "widget-attributes": {
            "layout": "inline",
            "default": "Access Credentials",
            "options": [
              {
                "id": "Access Credentials",
                "label": "Access Credentials"
              },
              {
                "id": "IAM",
                "label": "IAM"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Access ID",
          "name": "accessID",
          "widget-attributes": {
            "placeholder": "Amazon Access ID"
          }
        },
        {
          "widget-type": "password",
          "label": "Access Key",
          "name": "accessKey",
          "widget-attributes": {
            "placeholder": "Amazon Access Key"
          }
        },
        {
          "widget-type": "textbox",
          "label": "End Point",
          "name": "endPoint",
          "widget-attributes": {
            "placeholder": "Amazon End Point"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Bucket",
          "name": "bucketName",
          "widget-attributes": {
            "placeholder": "Amazon bucket name"
          }
        },
        {
          "widget-type": "password",
          "label": "Session Token",
          "name": "sessionToken",
          "widget-attributes": {
            "placeholder": "Amazon Session Token"
          }
        },
        {
          "widget-type": "hidden",
          "name": "region"
        }
      ]
    },
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "Path",
          "name": "path",
          "widget-attributes": {
            "placeholder": "s3a://<bucket>/path/to/output"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Path Suffix",
          "name": "suffix",
          "widget-attributes": {
            "default": "yyyy-MM-dd-HH-mm"
          }
        },
        {
          "widget-type": "select",
          "label": "Format",
          "name": "format",
          "widget-attributes": {
            "values": [
              "avro",
              "csv",
              "delimited",
              "json",
              "parquet",
              "tsv"
            ],
            "default": "json"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Delimiter",
          "name": "delimiter",
          "widget-attributes": {
            "placeholder": "Delimiter if the format is 'delimited'"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "json-editor",
          "label": "File System Properties",
          "name": "fileSystemProperties"
        },
        {
          "widget-type": "select",
          "label": "Enable Encryption",
          "name": "enableEncryption",
          "widget-attributes": {
            "default": "true",
            "values": [
              {
                "id": "true",
                "label": "True"
              },
              {
                "id": "false",
                "label": "False"
              }
            ]
          }
        },
        {
          "widget-type": "hidden",
          "name": "writeHeader"
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string"
        ],
        "schema-default-type": "string"
      }
    }
  ],
  "jump-config": {
    "datasets": [
      {
        "ref-property-name": "referenceName"
      }
    ]
  },
  "filters": [
    {
      "name": "AuthByIAM",
      "condition": {
        "expression": "authenticationMethod == 'Access Credentials'"
      },
      "show": [
        {
          "name": "accessID"
        },
        {
          "name": "accessKey"
        },
        {
          "name": "sessionToken"
        }
      ]
    },
    {
      "name": "showConnectionProperties ",
      "condition": {
        "expression": "useConnection == false"
      },
      "show": [
        {
          "type": "property",
          "name": "authenticationMethod"
        },
        {
          "type": "property",
          "name": "accessID"
        },
        {
          "type": "property",
          "name": "endPoint"
        },
        {
          "type": "property",
          "name": "bucketName"
        },
        {
          "type": "property",
          "name": "accessKey"
        },
        {
          "type": "property",
          "name": "sessionToken"
        }
      ]
    },
    {
      "name": "showConnectionId",
      "condition": {
        "expression": "useConnection == true"
      },
      "show": [
        {
          "type": "property",
          "name": "connection"
        }
      ]
    }
  ]
}
